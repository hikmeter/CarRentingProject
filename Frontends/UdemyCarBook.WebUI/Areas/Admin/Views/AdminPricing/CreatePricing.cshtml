@model CreatePricingDto
@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Ödeme Türü Ekle</h4>
						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Ödeme Türü Adı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="name">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Türü Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>







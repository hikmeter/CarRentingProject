@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yazar Güncelle</h4>
						<form method="post">
							<input type="hidden" asp-for="authorID" />
							<div class="form-group">
								<label for="exampleInputName">Ad Soyad</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="name">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea id="exampleInputDescription" class="form-control" maxlength="250" rows="3" asp-for="description"></textarea>
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Görsel URL</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" asp-for="imageUrl">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Yazar Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





@model List<ResultAllBlogsWithAuthorsDto>
@{int count = 0;}
<div class="col-xl-6">
	<div class="card">
		<div class="card-body">

			<h4 class="card-title">Blog Listesi</h4>
			<p class="card-subtitle mb-4 font-size-13">
				Yazarlarımızın bloglarını içeren listedir.
			</p>
			<div class="table-responsive">
				<table class="table table-borderless table-hover table-centered table-nowrap mb-0">
					<thead>
						<tr>
							<th>#</th>
							<th>Blog Başlığı</th>
							<th>Yazar</th>
							<th>Blog Görüntüle</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var item in Model)
						{
							count++;
							<tr>
							<td>
								<h5 class="font-size-15 mb-1 font-weight-normal">
								@count
								</h5>
								<span class="text-muted font-size-12">@item.createdDate.ToShortDateString()</span>
							</td>
							<td>
								<h5 class="font-size-15 mb-1 font-weight-normal">@item.title</h5>
								<span class="text-muted font-size-12">@item.categoryName</span>
							</td>
							<td>
								<h5 class="font-size-17 mb-1 font-weight-normal">
									@item.authorName
								</h5>
							</td>
							<td>
								<h5 class="font-size-15 mb-1 font-weight-normal">
									<a href="/Blog/BlogDetail/@item.blogID" class="btn btn-secondary">Blogu Görüntüle</a>
								</h5>
							</td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div> 
	</div>
</div> 
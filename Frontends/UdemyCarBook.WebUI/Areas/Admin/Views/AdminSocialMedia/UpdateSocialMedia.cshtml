@model UpdateSocialMediaDto
@{
	ViewData["Title"] = "UpdateSocialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Sosyal Medya Güncelle</h4>
						<form method="post">
							<input type="hidden" asp-for="socialMediaID" />
							<div class="form-group">
								<label for="exampleInputName">Başlık</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="name">
							</div>
							<div class="form-group">
								<label for="exampleInputUrl">URL</label>
								<input type="text" class="form-control" id="exampleInputUrl" asp-for="url">
							</div>
							<div class="form-group">
								<label for="exampleInputIconUrl">İkon URL</label>
								<input type="text" class="form-control" id="exampleInputIconUrl" asp-for="icon">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
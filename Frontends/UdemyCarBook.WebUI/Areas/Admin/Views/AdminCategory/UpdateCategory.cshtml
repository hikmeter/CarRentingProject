@model UpdateCategoryDto
@{
	ViewData["Title"] = "UpdateCategory";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Kategori Güncelle</h4>
						<form method="post">
							<input type="hidden" asp-for="categoryID" />
							<div class="form-group">
								<label for="exampleInputName">Kategori Adı</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="name">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Kategori Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

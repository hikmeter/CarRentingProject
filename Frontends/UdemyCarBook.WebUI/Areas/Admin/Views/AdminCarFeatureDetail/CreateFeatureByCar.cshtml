@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araca Özellik Ata</h4>
						<form method="post">
							@for (int i = 0; i < Model.Count; i++)
							{
								<div class="form-check">
									<input type="hidden" asp-for="@Model[i].featureID" />
									<input type="hidden" asp-for="@Model[i].name" />
									<input type="checkbox" class="form-check-input" />
									<label class="form-check-label">@Model[i].name</label>
								</div>
							}
							<br />
							<button class="btn btn-success">Özellik Ata</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


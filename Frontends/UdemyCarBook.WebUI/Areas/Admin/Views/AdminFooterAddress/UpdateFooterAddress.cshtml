@model UpdateFooterAddressDto
@{
	ViewData["Title"] = "UpdateFooterAddress";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Alt Adres Güncelle</h4>
						<p class="card-subtitle mb-4">
							Dikkat! Siteye alt adres bilgisi eklerken önceki kaydı silmeyi unutmayınız. Aksi
							takdirde kullanıcı görünümünde bozulmalar yaşanacak ve işlemler aksayacaktır. Alt Adres bölümünde tek
							bir alt adres kaydı bulunduğuna dikkat ediniz!
						</p>
						<form method="post">
							<input type="hidden" asp-for="footerAddressID" />
							<div class="form-group">
								<label for="exampleInputAddress">Adres</label>
								<input type="text" class="form-control" id="exampleInputAddress" asp-for="address">
							</div>
							<div class="form-group">
								<label for="exampleInputPhone">Telefon Numarası</label>
								<input type="tel" class="form-control" id="exampleInputPhone" asp-for="phone">
							</div>
							<div class="form-group">
								<label for="exampleInputEmail">E-Mail Adresi</label>
								<input type="email" class="form-control" id="exampleInputEmail" asp-for="email">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea id="exampleInputDescription" class="form-control" maxlength="250" rows="3" asp-for="description"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Alt Adres Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>







@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Site Hakkımızda Alanı</h4>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>Başlık</th>
										<th>Açıklama</th>
										<th>Görsel</th>
										<th>Güncelle</th>
										<th>Sil</th>
									</tr>
								</thead>
								<tbody>
									@if (Model.Any())
									{
										@foreach (var item in Model)
										{
											<tr>
												<td>@item.title</td>
												<td>@item.description</td>
												<td>@item.imageUrl</td>
												<td><a href="/Admin/AdminAbout/UpdateAbout/@item.aboutID" class="btn btn-outline-warning">Güncelle</a></td>
												<td><a href="/Admin/AdminAbout/RemoveAbout/@item.aboutID" class="btn btn-outline-danger">Sil</a></td>
											</tr>
										}
									}
									else
									{
										<tr>
											<td colspan="4" class="text-center">
												<div class="alert alert-info">
													<p class="mb-0">Henüz hiçbir hakkımızda bilgisi eklenmemiş!</p>
												</div>
											</td>
										</tr>
									}
								</tbody>

							</table>
							<a href="/Admin/AdminAbout/CreateAbout" class="btn btn-outline-success">Hakkımızda Bilgisi Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


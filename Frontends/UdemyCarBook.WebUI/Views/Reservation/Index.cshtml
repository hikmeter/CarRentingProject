@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form method="post" class="bg-light p-5 contact-form">
        <h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
            <input type="hidden" asp-for="carID" value="@ViewBag.id" class="form-control">
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="name" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="surName" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="number" asp-for="age" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Ehliyeti Aldığınız Yıl</label>
            <input type="text" asp-for="driverLisenceYear" class="form-control" required>
        </div>
        <div class="form-group">
            <label>E-Mail Adresiniz</label>
            <input type="email" asp-for="email" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input type="tel" asp-for="phone" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Aracı Teslim Almak İstediğiniz Konum</label>
            @Html.DropDownListFor(x => x.pickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", name = "locationid" })
        </div>
        <div class="form-group">
            <label>Aracı Teslim Etmek İstediğiniz Konum</label>
            @Html.DropDownListFor(x => x.dropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", name = "locationid" })
        </div>
        <div class="form-group">
            <label>Varsa Eklemek İstedikleriniz</label>
            <textarea class="form-control" asp-for="description" rows="7"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyon Yap" class="btn btn-primary py-3 px-5">
        </div>
    </form>
</div>


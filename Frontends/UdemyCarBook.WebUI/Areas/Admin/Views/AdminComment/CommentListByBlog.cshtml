@model List<ResultGetCommentsByBlogId>
@{
	ViewData["Title"] = "CommentListByBlog";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card-body">
					<h4 class="card-title">Yorum Listesi</h4>
					<div class="row">
						@foreach (var item in Model)
						{
							count++;

							<div class="col-md-4">
								<div class="card">
									<h5 class="card-header">Yorum -  @count</h5>
									<div class="card-body">
										<h4 class="card-title">@item.name</h4>
										<p class="card-text">@item.description</p>
										<a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Sil</a>
									</div>
									<div class="card-footer text-muted">@item.createdDate.ToShortDateString()</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


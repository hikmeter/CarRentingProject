@model List<ResultCarFeatureByCarIdDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araca Ait Özellikler</h4>
						<form method="post">
							@for (int i = 0; i < Model.Count; i++)
							{
								<div class="form-check">
									<input type="hidden" asp-for="@Model[i].carFeatureID" />
									<input type="hidden" asp-for="@Model[i].featureID" />
									<input type="checkbox" asp-for="@Model[i].available" class="form-check-input"/>
									<label class="form-check-label" for="@Model[i].available">@Model[i].featureName</label>
								</div>
							}
							<br />
							<button class="btn btn-success">Değişiklikleri Kaydet</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
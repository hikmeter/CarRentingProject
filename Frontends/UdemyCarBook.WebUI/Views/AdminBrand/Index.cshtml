@model List<ResultBrandDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araç Marka Listesi</h4>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Marka Adı</th>
										<th>Markaya Ait Araçlar</th>
										<th>Güncelle</th>
										<th>Sil</th>
									</tr>
								</thead>
								<tbody>
									@if (Model.Any())
									{
										@foreach (var item in Model)
										{
											<tr>
												<th scope="row">@item.brandID</th>
												<td>@item.name</td>
												<td><a href="/AdminBrand/UpdateBrand/@item.brandID" class="btn btn-outline-dark">Markaya Ait Araçlar</a></td>
												<td><a href="/AdminBrand/UpdateBrand/@item.brandID" class="btn btn-outline-warning">Güncelle</a></td>
												<td><a href="/AdminBrand/RemoveBrand/@item.brandID" class="btn btn-outline-danger">Sil</a></td>
											</tr>
										}
									}
									else
									{
										<tr>
											<td colspan="4" class="text-center">
												<div class="alert alert-info">
													<p class="mb-0">Henüz hiçbir marka eklenmemiş!</p>
												</div>
											</td>
										</tr>
									}
								</tbody>

							</table>
							<a href="/AdminBrand/CreateBrand" class="btn btn-outline-success">Marka Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


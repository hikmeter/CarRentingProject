@model UpdateServiceDto
@{
	ViewData["Title"] = "UpdateService";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Hizmet Güncelle</h4>
						<form method="post">
							<input type="hidden" asp-for="serviceID" />
							<div class="form-group">
								<label for="exampleInputTitle">Başlık</label>
								<input type="text" class="form-control" id="exampleInputTitle" asp-for="title">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea id="exampleInputDescription" class="form-control" maxlength="250" rows="3" asp-for="description"></textarea>
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">İkon URL</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" asp-for="iconUrl">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Hizmet Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
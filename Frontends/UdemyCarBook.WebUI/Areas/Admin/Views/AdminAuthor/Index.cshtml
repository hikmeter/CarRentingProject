@model List<ResultAuthorDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yazar Listesi</h4>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Ad Soyad</th>
										<th>Yazar Blogları</th>
										<th>Güncelle</th>
										<th>Sil</th>
									</tr>
								</thead>
								<tbody>
									@if (Model.Any())
									{
										@foreach (var item in Model)
										{
											<tr>
												<td>@item.authorID</td>
												<td><img src="@item.imageUrl" width="50" height="50" class="rounded-circle" style="margin-right:10px" />@item.name</td>
												<td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.authorID" class="btn btn-outline-dark">Yazar Blogları</a></td>
												<td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.authorID" class="btn btn-outline-warning">Güncelle</a></td>
												<td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.authorID" class="btn btn-outline-danger">Sil</a></td>
											</tr>
										}
									}
									else
									{
										<tr>
											<td colspan="4" class="text-center">
												<div class="alert alert-info">
													<p class="mb-0">Henüz hiçbir yazar eklenmemiş!</p>
												</div>
											</td>
										</tr>
									}
								</tbody>

							</table>
							<a href="/Admin/AdminAuthor/CreateAuthor" class="btn btn-outline-success">Yazar Ekle</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

